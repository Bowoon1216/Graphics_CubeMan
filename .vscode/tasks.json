{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: g++.exe build active file",
      "command": "C:\\msys64\\ucrt64\\bin\\g++.exe", // MinGW 설치 경로
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "${workspaceFolder}/*.cpp",
        "-I",
        "${workspaceFolder}/libs/include",
        "-L",
        "${workspaceFolder}/libs/lib",
        "-lfreeglut",
        "-lglew32",
        "-lopengl32",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}.exe"
